val comp(f, g) = lambda (x) f(g(x)) ;;

rec map(f) = lambda (xs)
    (if xs = nil
    then nil
    else f(head(xs)):map(f)(tail(xs))) ;;

rec filter(p) = lambda (xs)
    (if xs = nil
    then nil
    else 
        if (p(head(xs)))
        then head(xs):filter(p)(tail(xs))
        else filter(p)(tail(xs))) ;;

